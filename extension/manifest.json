{
  "manifest_version": 3,
  "name": "Yahudim App Extension",
  "version": "1.0.0",
  "description": "A Chrome extension for Yahudim App.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://yahudim.app/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
